<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laughingcolours.com.trycatch.laughingcolours.Activities.FavoriteImageFullScreen"
    android:orientation="vertical">

    <!--<ImageView
        android:id="@+id/fav_full_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>-->
    <include
        layout="@layout/toolbar"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/fav_img_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bnv_fav_img"
        android:theme="@style/Widget.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="labeled"
        android:background="@color/lightBrown"
        android:layout_alignParentBottom="true"
        app:menu="@menu/favorite_img_bottom_navigation"/>

</RelativeLayout>